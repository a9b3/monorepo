{
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "coc.preferences.jumpCommand": "drop",
  "codeLens.enable": false,
  "suggest.floatEnable": true,
  "signature.target": "float",
  "signature.floatConfig": {
    "border": true
  },
  "suggest.floatConfig": {
    "border": true
  },
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.floatConfig": {
    "border": true
  },
  "hover.floatConfig": {
    "border": true
  },
  "diagnostic.format": "%message [%source]",
  // python
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  // golang
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  // js
  "javascript.format.enabled": true,
  "eslint.probe": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "svelte"
  ],
  "eslint.validate": ["svelte"],
  "svelte.plugin.typescript.diagnostics.enable": true,
  "svelte.ask-to-enable-ts-plugin": false,
  "svelte.language-server.ls-path": "node_modules/svelte-language-server/bin/server.js",
  "yaml.format.enable": false,
  "yaml.schemas": {
    "kubernetes": "k8s/**/*.yaml"
  }
}
