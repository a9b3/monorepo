{
  "testEnvironment": "node",
  "haste": {
    "enableSymlinks": false
  },
  "verbose": true,
  "moduleFileExtensions": ["js", "json", "jsx", "node", "mjs", "ts", "tsx"],
  "testMatch": ["**/*.test.ts", "**/*.test.js", "**/*.test.mjs"],
  "transform": {
    "^.+\\.(t)sx?$": ["@swc/jest"]
  },
  "extensionsToTreatAsEsm": [".ts", ".tsx"]
}
