{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@ipc/*": [
        "src/ipc/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@preload/*": [
        "src/preload/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ]
    }
  },
  "include": [
    "electron.vite.config.*",
    "src/preload/**/*",
    "src/preload/*.d.ts",
    "src/main/**/*",
    "src/ipc/**/*",
    "src/renderer/**/*",
  ]
}
