{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "paths": {
      "@monorepo/*": [
        "./*"
      ],
      "*": [
        "./node_modules/*",
        "./bazel/js/backend/node_modules/*",
        "./bazel/js/backend/node_modules/@types/*"
      ]
    }
  },
  "include": [
    "orgs",
    "libs",
    "./bazel/js/backend/node_modules",
    "repos",
    "bazel",
    "jest.config.js",
  ]
}
