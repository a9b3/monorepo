{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo/*": ["./*"],
      "*": [
        "./node_modules/*",
        "./bazel/js/backend/node_modules/*",
        "./bazel/js/backend/node_modules/@types/*"
      ]
    }
  },
  "include": [
    "orgs",
    "libs",
    "./bazel/js/backend/node_modules",
    "repos",
    "bazel"
  ]
}
